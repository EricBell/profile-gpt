# Required - DO NOT USE THESE EXAMPLE VALUES IN PRODUCTION!
# Generate secure keys with:
#   python -c "import secrets; print(secrets.token_hex(32))"

OPENAI_API_KEY=your-openai-api-key-here

# FLASK_SECRET_KEY must be 32+ characters - example format (generate your own!):
FLASK_SECRET_KEY=a1b2c3d4e5f6789012345678901234567890abcdefabcdef1234567890abcdef

# ADMIN_RESET_KEY is optional but should be strong if set (16+ characters):
ADMIN_RESET_KEY=0123456789abcdef0123456789abcdef

# Reset Request Notifications
# Required for reset request email notifications
ADMIN_EMAIL=eric@example.com
APP_URL=https://your-app-domain.com

# SMTP Configuration (for email notifications)
# Example for Gmail: Use app-specific password, not regular password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Optional
PERSONA_FILE_PATH=./persona.txt
QUERY_LOG_PATH=./logs

# Intention Monitoring Configuration
MAX_QUERIES_PER_SESSION=50
OUT_OF_SCOPE_WARNING_THRESHOLD=5
OUT_OF_SCOPE_CUTOFF_THRESHOLD=10

MAX_QUERY_LENGTH=500
MAX_JOB_DESCRIPTION_LENGTH=5000
FLASK_ENV=development
PORT=5000
